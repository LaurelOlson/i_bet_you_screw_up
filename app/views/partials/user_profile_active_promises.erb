<% @user.promises_active.each do |promise| %>

  <% @promise = promise %> <!-- For use in partials -->

  <div class="promise">

    <!-- Promise Details -->
    <div class="promise-image">
      <img src="<%= promise.user.gravatar %>" alt="Logo image">
    </div>
    <div class="promise-content">
      <h1><%= @pronoun %> promised to..</h1>
      <a href='promises/<%= promise.id %>'><p><%= promise.content %></p></a>
      <p class="promise-detail"><%= promise.hours_until_expired %></p>
    </div>

    <!-- Validate promise -->
    <% if @current_user == @user %>
      <%= erb :'/partials/validate_your_promise_modal' %>
    <% else %>
      <%= erb :'/partials/quick_bet_modal' %>
    <% end %>
    
  </div>

<% end %> <!-- end each loop -->
