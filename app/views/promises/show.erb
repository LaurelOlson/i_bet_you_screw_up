<%= erb :'partials/nav_bar' %>

<section class="page-body">
    
  <article class="container page-article">

    <header class="article-header">
      <h1></h1>
    </header>

    <div class="promise">
      <div class="promise-content">
        <div class="details">
          <p><%= @promise.content %></p>
        </div>
        <p class="promise-detail">Expires in <%= @promise_expires_in %> hours!</p>
      </div>
      <div class="user-img">
        <img src="http://placehold.it/400x400">  
      </div>
    </div>

    <% if @current_user %>

      <% if @current_user_bet %>
        <div class="form">
          <div class="promise-details">
            <form>
              <h2>Will <%= @user_of_the_promise.name %> keep their promise?</h2>
              <br>
              <input class="place_bet" type="button" name="yes" value="Yes (33)">
              <input class="place_bet" type="button" name="yes" value="No (45)">
            </form>
            <br>
          </div>
        </div>

      <% else %>
        <div class="form">
          <div class="promise-details">
            <form>
              <h2>Did you keep your promise?</h2>
              <br>
              <input class="verify-promise" type="button" name="yes" value="Promise Kept">
              <input class="verify-promise" type="button" name="yes" value="Promise Not Kept">
            </form>
            <br>
          </div>
        </div>
      <% end %>

    <% else %>

      <div class="form">
        <div class="promise-details">
          <form>
            <h2>Login to place a bet.</h2>
            <br>
            <input type="button" name="yes" value="Login">
          </form>
          <br>
        </div>
      </div>

    <% end %>

    <header class="comments-header">
      <h1>Comments</h1>
    </header>

    <div class="comment">
      <div class="comment-image">
        <img src="http://placehold.it/400x400" alt="Logo image">
      </div>
      <div class="comment-content">
        <a href='../../profile/index.html'<h1>Some Person has commented...</h1></a>
