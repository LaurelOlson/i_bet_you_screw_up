<div class="hero" style="background-image: url(<%= @background[:img] %>)">
  <div class="hero-inner">
    <a href="" class="hero-logo"><img src="/images/screw-logo.png"></a>
    <div class="hero-copy">
      <h2><%= @background[:copy] %>
        <% if current_user %><a href='/promises/new'>Make a promise</a><% else %><a href='/signup'>Join today</a> and win big<% end %>.
      </h2><br> 
      <% if !current_user %>
        <p>Already a user? Login below</p><br>
        <div class="form-wrapper">
          <%= erb :'partials/flash_message_error' %>
          <form action="/login" method="POST">
            <label class='sr-only' for="email">Email</label>
            <input type="email" id='email' name='email' placeholder='Email Address'>

            <label class='sr-only' for="password">Password</label>
            <input type="password" id='password' name='password' placeholder='Password'>

            <input type="submit" value='submit'>
          </form>
        </div>
      <% end %>
    </div>
  </div>
</div>

<article class="features">
  <div id="js-fadeInElement" class="fade-in-element">
    <div class="feature-box">
      <h2><%= Promise.count_all[:kept] %></h2>
      <h3>Promise Kept</h3>
    </div>

    <div class="feature-box">
      <h2><%= Promise.count_all[:broken] %></h2>
      <h3>Promise Broken</h3>
    </div>

    <div class="feature-box">
      <h2><%= Bet.count_all %></h2>
      <h3>Bets Made</h3>
    </div>

    <p class="feature-copy">
      This box will fade in when it's <b>300px above the bottom of the window.
      And disappear as it goes <b>below the bottom</b> of the window.
      If JavaScript is disabled, it will still show up.
    </p>
  </div>
</article>