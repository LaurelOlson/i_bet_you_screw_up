<div class="hero" style="background-image: url(<%= @background[:img] %>)">
  <div class="hero-inner">
    <a href="" class="hero-logo"><img src="/images/screw-logo.png"></a>
    <div class="hero-copy">
      <h2><%= @background[:copy] %>
        <% if current_user %><a href='/promises/new'>Make a promise</a><% else %><a href='/signup'>Join today</a> and win big<% end %>.
      </h2><br> 
      <% if !current_user %>
        <p>Already a user? Login below</p><br>
        <div class="form-wrapper">
          <%= erb :'partials/flash_message_error' %>
          <form action="/login" method="POST">
            <label class='sr-only' for="email">Email</label>
            <input type="email" id='email' name='email' placeholder='Email Address'>

            <label class='sr-only' for="password">Password</label>
            <input type="password" id='password' name='password' placeholder='Password'>

            <input type="submit" value='submit'>
          </form>
        </div>
      <% end %>
    </div>
  </div>
</div>

<article class="features">
  <div id="js-fadeInElement" class="fade-in-element">
    <div class="feature-box">
      <h2 class='promise-count'><%= Promise.count_all[:kept] %></h2>
      <h3 class='promise-title'>Promises Kept</h3>
      <svg class='one' width="120" height="120" viewPort="0 0 180 180" version="1.1" xmlns="http://www.w3.org/2000/svg"><polygon class="bg-shape" points="80,10 100,20 120,100 40,150 20,100 20,80 10,40"/></svg>
    </div>

    <div class="feature-box">
      <h2 class='promise-count'><%= Promise.count_all[:broken] %></h2>
      <h3 class='promise-title'>Promises Broken</h3>
      <svg class='two' width="120" height="120" viewPort="0 0 180 180" version="1.1" xmlns="http://www.w3.org/2000/svg"><polygon class="bg-shape" points="80,10 100,20 120,100 40,150 20,100 20,80 10,40"/></svg>
    </div>

    <div class="feature-box">
      <h2 class='promise-count'><%= Bet.count_all %></h2>
      <h3 class='promise-title'>Bets Made</h3>
      <svg class='three' width="120" height="120" viewPort="0 0 180 180" version="1.1" xmlns="http://www.w3.org/2000/svg"><polygon class="bg-shape" points="80,10 100,20 120,100 40,150 20,100 20,80 10,40"/></svg>
    </div>

